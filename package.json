{
  "name": "docula",
  "version": "0.3.0",
  "description": "Open Source Static Site Generator",
  "exports": "./dist/docula.js",
  "types": "./dist/docula.d.ts",
  "type": "module",
  "engines": {
    "node": ">=14.16"
  },
  "scripts": {
    "build": "tsc -p .",
    "clean": "rm -rf dist && rm -rf test/data/site && rm -rf node_modules",
    "test": "xo --fix && jest --coverage",
    "test:code": "npm run build && node ./bin/docula.js",
    "lint": "xo --fix",
    "build:site": "npm run build && node ./bin/docula.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaredwray/docula.git"
  },
  "bin": {
    "docula": "./bin/docula.js"
  },
  "keywords": [
    "open",
    "source",
    "static",
    "site",
    "github",
    "zendesk",
    "intercom",
    "swagger",
    "stripe"
  ],
  "author": "Jared Wray (me@jaredwray.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jaredwray/docula/issues"
  },
  "homepage": "https://github.com/jaredwray/docula#readme",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.2",
    "@types/luxon": "^3.3.0",
    "jest": "^29.5.0",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "ts-jest": "^29.1.0",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.1.3",
    "xo": "^0.54.2"
  },
  "dependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@types/markdown-it": "^12.2.3",
    "ajv": "^8.12.0",
    "algoliasearch": "^4.17.0",
    "axios": "^1.4.0",
    "commander": "^10.0.1",
    "dayjs": "^1.11.7",
    "dotenv": "^16.3.1",
    "download-stats": "^0.3.4",
    "eleventy-plugin-toc": "^1.1.5",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.7",
    "instantsearch.js": "^4.56.2",
    "luxon": "^3.3.0",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.7",
    "node-fetch": "3.3.1",
    "winston": "^3.9.0"
  },
  "files": [
    "dist",
    "bin",
    "init"
  ],
  "xo": {
    "rules": {
      "@typescript-eslint/no-unsafe-assignment": 0,
      "@typescript-eslint/no-unsafe-return": 0,
      "@typescript-eslint/no-unsafe-argument": 0
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.[jt]sx?$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "resolver": "jest-ts-webcompat-resolver",
    "testMatch": [
      "**/test/*.test.(ts)",
      "**/test/plugins/*.test.(ts)",
      "**/test/eleventy/*.test.(ts)"
    ],
    "testEnvironment": "node"
  }
}
