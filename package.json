{
  "name": "docula",
  "version": "0.0.1",
  "description": "Open Source Static Site Generator",
  "exports": "./dist/docula.js",
  "types": "./dist/docula.d.ts",
  "engines": {
    "node": ">=14.16"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist && rm -rf test/data/site && rm -rf node_modules",
    "test": "xo --fix && jest --coverage",
    "test:code": "yarn build && node ./bin/docula.js",
    "lint": "xo --fix",
    "docs:gen": "eleventy --config=.eleventy.cjs",
    "docs:gen:watch": "eleventy --config=.eleventy.cjs --serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaredwray/docula.git"
  },
  "bin": {
    "docula": "./bin/docula.js"
  },
  "keywords": [
    "open",
    "source",
    "static",
    "site",
    "github",
    "zendesk",
    "intercom",
    "swagger",
    "stripe"
  ],
  "author": "Jared Wray (me@jaredwray.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jaredwray/docula/issues"
  },
  "homepage": "https://github.com/jaredwray/docula#readme",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.2.0",
    "@types/luxon": "^3.1.0",
    "@types/markdown-it": "^12.2.3",
    "jest": "^29.2.2",
    "ts-jest": "^29.0.3",
    "ts-jest-resolver": "^2.0.0",
    "typescript": "^4.8.4",
    "xo": "^0.53.0"
  },
  "dependencies": {
    "@11ty/eleventy": "^1.0.2",
    "ajv": "^6.12.6",
    "algoliasearch": "^4.14.2",
    "axios": "^1.2.1",
    "commander": "^9.4.1",
    "dayjs": "^1.11.6",
    "dotenv": "^16.0.3",
    "download-stats": "^0.3.4",
    "eleventy-plugin-toc": "^1.1.5",
    "fs-extra": "^10.1.0",
    "instantsearch.js": "^4.49.1",
    "luxon": "^3.1.1",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.5",
    "node-fetch": "2.6.7"
  },
  "xo": {
    "rules": {
      "@typescript-eslint/no-unsafe-assignment": 0,
      "@typescript-eslint/no-unsafe-return": 0
    }
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "resolver": "ts-jest-resolver",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "./tsconfig.json",
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/*.test.(ts)",
      "**/test/plugins/*.test.(ts)",
      "**/test/eleventy/*.test.(ts)"
    ],
    "testEnvironment": "node"
  }
}
