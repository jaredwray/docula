{
  "name": "docula",
  "version": "0.0.1",
  "description": "Open Source Static Site Generator",
  "type": "module",
  "exports": "./dist/docula.js",
  "types": "./dist/docula.d.ts",
  "engines": {
    "node": ">=14.16"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist && rm -rf node_modules",
    "test": "xo && jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaredwray/docula.git"
  },
  "keywords": [
    "open",
    "source",
    "static",
    "site",
    "github",
    "zendesk",
    "intercom",
    "swagger",
    "stripe"
  ],
  "author": "Jared Wray (me@jaredwray.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jaredwray/docula/issues"
  },
  "homepage": "https://github.com/jaredwray/docula#readme",
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.2.0",
    "eleventy": "^1.0.6",
    "jest": "^29.2.2",
    "ts-jest": "^29.0.3",
    "ts-jest-resolver": "^2.0.0",
    "typescript": "^4.8.4",
    "xo": "^0.53.0"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "fs-extra": "^10.1.0"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "resolver": "ts-jest-resolver",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "./tsconfig.json",
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/*.test.(ts)",
      "**/test/providers/*.test.(ts)"
    ],
    "testEnvironment": "node"
  }
}
